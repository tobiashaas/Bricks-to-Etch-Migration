{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "@playwright/test"],
    "allowJs": false,
    "noEmit": true
  },
  "include": [
    "assets/js/**/*.ts",
    "tests/playwright/**/*.ts",
    "scripts/**/*.ts",
    "types/**/*.d.ts"
  ]
}
