{
    "name": "etchfusion/suite",
    "description": "Etch Fusion Suite - End-to-end migration and orchestration toolkit with PSR-4 autoloading.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^7.4",
        "psr/container": "1.1"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.1",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "yoast/phpunit-polyfills": "^4.0",
        "phpunit/phpunit": "^9.6",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Bricks2Etch\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bricks2Etch\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Etch Fusion Suite Contributors"
        }
    ],
    "config": {
        "platform": {
            "php": "7.4.0"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "test": [
            "@php -r \"if (!is_dir('build/logs')) { mkdir('build/logs', 0777, true); }\"",
            "@php -r \"if (!is_dir('build/coverage/html')) { mkdir('build/coverage/html', 0777, true); }\"",
            "@php vendor/bin/phpunit --testsuite unit,wordpress,integration,ui,performance --log-junit build/logs/junit.xml --coverage-clover build/logs/clover.xml --coverage-html build/coverage/html"
        ],
        "test:unit": "@php vendor/bin/phpunit --testsuite unit",
        "test:integration": "@php vendor/bin/phpunit --testsuite integration",
        "test:wordpress": "@php vendor/bin/phpunit --testsuite wordpress",
        "test:ui": "@php vendor/bin/phpunit --testsuite ui",
        "test:performance": "@php vendor/bin/phpunit --testsuite performance",
        "test:coverage": "@test"
    }
}
